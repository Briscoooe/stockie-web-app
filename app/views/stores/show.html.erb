<h1 class="title"><%= @store.name %></h1>
<%= link_to @store.url, :class => "subtitle" %>
<h1 class="subtitle">Current Products</h1>
<table class="table">
  <tr>
    <th>Name</th>
    <th>URL</th>
    <th>Variant</th>
    <th>In Stock</th>
  </tr>
 
  <% @store.products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= link_to 'View on site', product.url %></td>
      <td><%= product.variant_name %></td>
      <td><%= product.in_stock %></td>
    </tr>
  <% end %>
</table>