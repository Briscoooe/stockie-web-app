<h1 class="title is-1">Stores</h1>
<div class="table-container">
  <table class="main-table">
    <tr>
      <th>Name</th>
      <th>Number of products</th>
    </tr>
  
    <% @stores.each do |store| %>
      <tr>
        <td><%= link_to store.name, store_path(store) %></td>
        <td><%= store.products.length %></td>
      </tr>
    <% end %>
  </table>
</div>